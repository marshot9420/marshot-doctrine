generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum SocialProvider {
  LOCAL
  GOOGLE
  KAKAO
  NAVER
}

model User {
  id       Int             @id @default(autoincrement())
  username String          @unique
  password String?
  socialId String?
  social   SocialProvider? @default(LOCAL)
}
